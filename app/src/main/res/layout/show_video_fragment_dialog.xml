<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="330dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/black"
            >
                <VideoView
                    android:id="@+id/videoView_for_expert"
                    android:layout_width="330dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    />


        </FrameLayout>
        <ProgressBar
            android:id="@+id/progressBar_showVideo"
            style="?android:attr/progressBarStyle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_upload_video"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/custom_button4"

            android:layout_below="@id/framelayout"
            android:layout_toEndOf="@id/btn_delete_video"
            android:text="yÃ¼kle"
            ></Button>
        <Button
            android:id="@+id/btn_delete_video"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/btn_cancel_video"
            android:layout_marginTop="2dp"
            android:background="@drawable/custom_button4"
            android:layout_below="@id/framelayout"
            android:text="sil"
            ></Button>
        <Button
            android:id="@+id/btn_cancel_video"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/framelayout"
            android:background="@drawable/custom_button4"

            android:text="iptal"
            ></Button>
        <TextView
            android:id="@+id/videoView_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="16dp"
            ></TextView>
</RelativeLayout>