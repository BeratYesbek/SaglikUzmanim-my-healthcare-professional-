<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/custom_border_buttom"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_notification_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="15dp"
            android:textColor="#000"
            android:textStyle="italic"
            android:padding="2dp"
            >

        </TextView>
        <TextView
            android:id="@+id/textView_notification_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titdsadasdsadasdasdasdsadasdasdasle"
            android:textSize="12dp"
            android:textColor="@color/darkColor"
            android:padding="5dp"
            android:layout_below="@+id/textView_notification_item_title"
            >

        </TextView>
        <TextView
            android:id="@+id/textView_notification_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27/02/2021"
            android:layout_below="@+id/textView_notification_body"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            >

        </TextView>
    </RelativeLayout>
</RelativeLayout>