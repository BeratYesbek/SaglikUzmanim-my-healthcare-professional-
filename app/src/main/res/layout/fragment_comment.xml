<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:background="@drawable/custom_card_view_6"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_fragment_comment"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Lütfen uzmanınız ile ilgili bir yorum yazınız. Yaptığınız yorum uzmanınızın profilinde paylaşılacaktır"
        android:textColor="@color/darkColor"
        android:textSize="14dp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >

    </TextView>
    <EditText
        android:id="@+id/editText_fragment_comment"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@drawable/custom_input2"
        android:hint="Yorum yazınız..."
        android:gravity="top"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_fragment_comment"
        android:textColor="#fff"
        >

    </EditText>
    <Button
        android:id="@+id/btn_next_fragment_comment"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/editText_fragment_comment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button2"
        android:text="ileri"
        android:textColor="#fff"
        >

    </Button>


</RelativeLayout>