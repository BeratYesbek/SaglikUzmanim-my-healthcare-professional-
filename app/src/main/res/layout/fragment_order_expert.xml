<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="right"
    android:animateLayoutChanges="true"
    app:layout_constraintCircleRadius="@dimen/appbar_padding"
    android:background="@drawable/custom_background"
    android:clickable="true"
    android:id="@+id/relative5"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_close_order_expert_fragment"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_baseline_arrow_forward_ios_24">

    </Button>

    <RadioGroup
        android:id="@+id/radio_group_for_order"
        android:layout_width="match_parent"
        android:layout_below="@id/btn_close_order_expert_fragment"
        android:layout_height="wrap_content">



        <RadioButton android:id="@+id/radio_increasing_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artan fiyat"
            android:layout_marginTop="75dp"
            android:textStyle="italic"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"

            android:layout_below="@id/radio_smart_sorting"
    />

        <RadioButton android:id="@+id/radio_descending_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Azalan fiyat"
            android:textStyle="italic"
            android:textSize="16dp"
            android:layout_marginTop="5dp"

            android:layout_marginLeft="20dp"
            android:layout_below="@id/radio_increasing_price"
 />

        <RadioButton android:id="@+id/radio_descending_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textStyle="italic"
            android:textSize="16dp"

            android:text="Azalan Puan"
            android:layout_below="@id/radio_descending_price"
      />

        <RadioButton
            android:id="@+id/radio_increasing_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_descending_point"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"

            android:text="Artan Puan"
            android:textSize="16dp"
            android:textStyle="italic"></RadioButton>

    </RadioGroup>


<Button
    android:id="@+id/btn_order_to_experts"
    android:layout_width="200dp"
    android:layout_height="40dp"
    android:background="@drawable/custom_button"
    android:layout_marginTop="30dp"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:text="SÄ±rala"
    android:textColor="#fff"
    android:layout_below="@+id/radio_group_for_order"
    >

</Button>

</RelativeLayout>