    <TextView
        android:id="@+id/textView_dipslay_choses"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_below="@id/textView_dipslay_choses1"
        android:layout_marginBottom="16dp"
        android:paddingLeft="15dp" />

    <Button
        android:id="@+id/btnAddAd"
        android:layout_width="157dp"
        android:layout_height="49dp"
        android:layout_below="@id/textView_dipslay_choses"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/custom_button"
        android:onClick="btn_insert_ad"
        android:text="İLAN VER" />

    <TextView
        android:id="@+id/textView_dipslay_choses1"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_below="@id/btnChoseLocationForAdd"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:paddingLeft="15dp" />

    <Button
        android:id="@+id/btnChoseLocationForAdd"
        android:layout_width="225dp"
        android:layout_height="44dp"
        android:layout_below="@id/btnChoseExportForAdd"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="4dp"
        android:background="@drawable/custom_button"
        android:onClick="btnChoiceLocation"
        android:text="Bölge Seçiniz" />

    <Button
        android:id="@+id/btnChoseExportForAdd"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:layout_below="@id/RelativeLayout_ad_jobAdvertisement"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/custom_button"
        android:onClick="btnChoiceExpert"
        android:text="Sağlık Uzmanı Seçiniz" />

    <ProgressBar
        android:id="@+id/progressBar_add_ad"
        style="?android:attr/progressBarStyle"

        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

